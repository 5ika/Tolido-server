extends layout

block content
    .container
        h1 Login
        if(message != '')
            .alert.alert-danger !{message}
        form(action='/user/login' method='post')
            div.form-group
            label Email
            input(type='email' name='email').form-control
            div.form-group
                label Mot de passe
                input(type='password' name='password').form-control
            button(type='submit').btn.btn-primary.btn-lg.btn-flat Connexion
            a(href='/user/signup').btn.btn-info.btn-lg.btn-flat S'enregistrer
